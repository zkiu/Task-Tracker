{
	"name": "task-tracker-firebase",
	"version": "0.1.0",
	"proxy": "https://us-central1-task-tracker-84155.cloudfunctions.net/",
	"private": true,
	"dependencies": {
		"@testing-library/jest-dom": "^5.11.5",
		"@testing-library/react": "^11.1.1",
		"@testing-library/user-event": "^12.2.0",
		"bootstrap": "^4.5.3",
		"firebase": "^8.0.1",
		"jquery": "^3.5.1",
		"popper.js": "^1.16.1",
		"react": "^17.0.1",
		"react-dom": "^17.0.1",
		"react-icons": "^3.11.0",
		"react-router-dom": "^5.2.0",
		"react-scripts": "4.0.0",
		"web-vitals": "^0.2.4"
	},
	"scripts": {
		"start": "react-scripts start",
		"build": "react-scripts build",
		"test": "react-scripts test",
		"eject": "react-scripts eject",
		"deploy": "npm run build && git add -A && git commit -m\"Deploying new build\" && git push",
		"functions:build": "npm run build --prefix ./functions",
		"functions:deploy": "npm run functions:build && firebase deploy --only functions",
		"functions:watch": "nodemon --watch ./functions --ignore  ./functions/build --exec \"npm run functions:build\"",
		"functions:dev": "concurrently \"npm run functions:watch\" \"firebase emulators:start --only functions\""
	},
	"eslintConfig": {
		"extends": [
			"react-app",
			"react-app/jest"
		]
	},
	"browserslist": {
		"production": [
			">0.2%",
			"not dead",
			"not op_mini all"
		],
		"development": [
			"last 1 chrome version",
			"last 1 firefox version",
			"last 1 safari version"
		]
	}
}
